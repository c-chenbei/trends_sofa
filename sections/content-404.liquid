
<!-- /templates/404.liquid -->
<div class="site-content-inner">
  <div class="page-404">
    <div class="banner-header {% if section.settings.bg_img_404 != blank %} lazyload {% endif %}" 
         	style=" 
                   
                   
                   		min-height:100hz;" 
         			{% if section.settings.bg_img_404 != blank %} 
         				data-bgset="{{ section.settings.bg_img_404 | img_url: "1920x1080" }}"
         			{% endif %}>
      <div class="container wrap-content">
        <div class="page-404-content">
          <h1 class="oops-404">
            {{ "general.404.word" | t }}
          </h1>
          <h2 class="title-404">
            {{ "general.404.title" | t }}
          </h2>
          <p>{{ "general.404.subtext" | t }}</p>
          <div class="wrap-help">
            <form id="searchForm404" method="get" class="search-404" action="/search" role="search">
              <div class="search-block">
                <div class="search-inner">
                  <input type="text" class="search-info" placeholder="{{ "general.404.key_word_search" | t }}" name="q" {% if search.performed %} value="{{ search.terms | escape | downcase }}"{% endif %}>
                  <input type="hidden" name="type" value="page" />
                  <button type="submit" class="search-button">
                    <svg viewBox="0 0 48.97 51.02"><path d="M3.72,17.4a14,14,0,1,1,14,14A14,14,0,0,1,3.72,17.4ZM39,38.59,29.79,29.4a17.16,17.16,0,1,0-2.3,1.94l9.42,9.42A1.5,1.5,0,0,0,39,38.64Z"/></svg>                  
                  </button>
                </div>
              </div>
            </form>
          	<a class="back-homepage" href="/">{{ "general.404.link" | t }} </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "404",
    "settings": [
        {
          "type": "header",
          "content": "404 Setting"
        },
        {
          "type": "image_picker",
          "id": "bg_img_404",
          "label": "Backdground image"
        }
	]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
