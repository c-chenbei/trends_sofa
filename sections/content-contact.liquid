                    {% endif %}
                  </div>
                  <div class="info phone">
                    <h5 class="subtitle">{{ section.settings.item2_title_contact }}</h5>
                    <p class="des">
                      {% assign somearray = section.settings.desc1_item2_title_contact | split: ' |' %} 
                      {% for item in somearray %}
                          <a href="tel: {{ item }}">{{ item }}</a>
                      {% endfor %} 
