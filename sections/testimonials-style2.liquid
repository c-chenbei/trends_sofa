{%- liquid
  assign sid = section.id %}
{%- for i in (1..1) -%}
    
<section class="laber_{{ sid }}">
			
    <div class="{{ section.settings.layout }}">
      
      <div  class="row">
        {%- if section.blocks.size > 0 -%}  
        	<div class="quote_col_left col-12 col-md-12 col-lg-6" >
				{% assign banner = section.settings.left_banner %} 
				<div class="images">
					   
					<a href="{% if section.settings.link_banner != blank %} {{ section.settings.link_banner }}{% else %}#{% endif %}" title="">
					
					<div class="lazyload pr_lazy_img nt_bg_lz"  data-bg="{% if banner != blank %}{{ banner | img_url: '960x473' }}{% else %}https://via.placeholder.com/960x473.png/'ccccc'/fff?text=960x473"{% endif %} data-ratio="{{ banner.aspect_ratio }}" style="padding-top:{{ 1 | divided_by: banner.aspect_ratio | times: 100 }}%" ></div>
					    
					</a>
					
			   </div>
			</div>
            <div class="quote_col_right col-12 col-md-12 col-lg-6" >
            <div class="contentTestimonial" >
              {% if section.settings.title != blank %}
              <div class="wrap_title ">
                {% if section.settings.title != blank %}
                <h3 class="section-title">{{ section.settings.title }}</h3>  
                {% endif %}
              </div>
              {% endif %}
              <div class="cms-wrap-content"  data-js-testimonial data-slick='{"slidesToShow": 1, "slidesToScroll":1, "lazyLoad": "ondemand", "autoplay": false, "autoplaySpeed": 2000, "arrows": {{ section.settings.nav_enable}} {% if section.settings.nav_enable %} ,"appendArrows": ".nav-slider-testimonial", "prevArrow": ".slick-prev-test",  "nextArrow": ".slick-next-test"{% endif %}  {% if section.settings.dot_enable %}, "dots":{{ section.settings.dot_enable}}, "appendDots": ".dots-slider-testimonial" {% endif %}}'>
             {% assign index = 0 %}
			 {%- for block in section.blocks -%}              	  
                  <div class="quote_slide">
                    <div class="quote_content">
						<div class="cms_content_quote">
							{{ block.settings.content }}
						</div>
                      <div class="cms_header_quote">
                        <div class="quote_icon"><svg viewBox="0 0 48.97 51.02"><path d="M 7.998,13.118c0,1.69, 1.32,3.060, 2.946,3.060c 0.522,0, 1.004-0.152, 1.43-0.4 c-0.146,1.636-0.97,4.022-3.99,6.454c-0.422,0.342-0.5,0.974-0.172,1.412c 0.192,0.256, 0.478,0.39, 0.766,0.39 c 0.208,0, 0.416-0.068, 0.594-0.212c 3.706-2.99, 4.632-6.062, 4.756-8.114C 14.54,13.084, 13.744,11.704, 13.016,10.984 C 12.95,10.914, 12.888,10.838, 12.814,10.776C 12.64,10.628, 12.484,10.524, 12.348,10.446C 12.342,10.442, 12.338,10.436, 12.332,10.434 c-0.010-0.006-0.020-0.008-0.030-0.012C 12.104,10.312, 11.962,10.26, 11.962,10.26l 0.010,0.024C 11.65,10.152, 11.312,10.058, 10.944,10.058 C 9.316,10.058, 7.998,11.428, 7.998,13.118zM 17.694,13.118c0,1.69, 1.318,3.060, 2.946,3.060c 0.522,0, 1.004-0.152, 1.43-0.4 c-0.146,1.636-0.97,4.022-3.99,6.454c-0.424,0.342-0.5,0.974-0.172,1.412c 0.192,0.256, 0.478,0.39, 0.766,0.39 c 0.208,0, 0.416-0.068, 0.594-0.212c 3.706-2.99, 4.632-6.062, 4.756-8.114c 0.212-2.624-0.586-4.004-1.312-4.724 c-0.068-0.070-0.13-0.146-0.204-0.208c-0.174-0.148-0.33-0.252-0.466-0.33c-0.006-0.004-0.010-0.008-0.016-0.012 c-0.010-0.006-0.020-0.008-0.030-0.012c-0.198-0.108-0.34-0.162-0.34-0.162l 0.010,0.024c-0.322-0.132-0.662-0.226-1.028-0.226 C 19.012,10.058, 17.694,11.428, 17.694,13.118z"></path></svg></div>
                         {%- if block.settings.image -%}
							<div id="testimonial_{{ index }}" class="quote_avatar {% if forloop.first %} active {% endif %}" >
							  <img class="lazyload" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{ block.settings.image | img_url: '83x83' }}" width="83" height="83" alt=""/>
							</div>
						  {% else %}
							<div id="testimonial_{{ index }}" class="quote_avatar no-img {% if forloop.first %} active {% endif %}">
							  <div class="nt_bg_lz lazyload pr_lazy_img" data-bg="https://via.placeholder.com/83x83.png/e1e1e1/fff?text=83x83" style="padding-top:100%;"></div>
							</div>
						  {%- endif -%}
						<div class="quote_info">
                        	<div class="quote_author">{{ block.settings.title }}</div>
                        	<div class="quote_address">{{ block.settings.address }}</div>
                        </div>
                        {%- if block.settings.rating >= 1 -%}
                          {%- case block.settings.rating -%}
                              {%- when 1 -%}{% assign class = ', cra2, cra2, cra2, cra2,dn' %}
                              {%- when 1.5 -%}{% assign class = ',-half pr, cra2, cra2, cra2, cra2' %}
                              {%- when 2 -%}{% assign class = ',, cra2, cra2, cra2,dn' %}
                              {%- when 2.5 -%}{% assign class = ',,-half pr, cra2, cra2, cra2' %}
                              {%- when 3 -%}{% assign class = ',,, cra2, cra2,dn' %}
                              {%- when 3.5 -%}{% assign class = ',,,-half pr, cra2, cra2' %}
                              {%- when 4 -%}{% assign class = ',,,, cra2,dn' %}
                              {%- when 4.5 -%}{% assign class = ',,,,-half pr, cra2' %}
                              {%- else -%}{% assign class = ',,,,,dn' %}
                          {%- endcase -%}
                          {% assign arr = class | split: ', ' %}
                          <div class="quote_rating cra rating_{{ block.settings.rating }}"><i class="las la-star{{ arr[0] }}"></i><i class="las la-star{{ arr[1] }}"></i><i class="las la-star{{ arr[2] }}"></i><i class="las la-star{{ arr[3] }}"></i><i class="las la-star{{ arr[4] }}"></i></div>
                      {%- endif -%}
                      </div>
                      
                    </div>
                  </div>
				  {% assign index = index | plus: 1 %}
              {%- endfor -%} 
              </div>
              <div class="dots-slider-testimonial">

              </div>
			  {% if section.settings.nav_enable %}
				  <div class="nav-slider-testimonial">
					<span class="slick-prev-test"><span class="text">{{ section.settings.prev }}</span></span>
					<span class="slick-next-test"><span class="text">{{ section.settings.next }}</span></span>
				  </div>
			  {% endif %}
            </div>            
            </div>            
        {%- else -%}
          {%- include 'no-blocks' -%}
        {%- endif -%}
      </div>
    </div>
</section>
{%- endfor -%}
{% style %}
{% assign cl_bg = section.settings.cl_bg %}
{% assign mg_top = section.settings.mg_top %}
{% assign mg_bottom = section.settings.mg_bottom %}
{% assign pd_top = section.settings.pad_top %}
{% assign pd_bottom = section.settings.pad_bottom %}
{% assign mobile_mg_top = section.settings.mobile_mg_top %}
{% assign mobile_mg_bottom = section.settings.mobile_mg_bottom %}
{% assign mobile_pd_top = section.settings.mobile_pd_top %}
{% assign mobile_pd_bottom = section.settings.mobile_pd_bottom %}

	.laber_{{ sid }}{
      {% if mg_top != 0 %}margin-top:{{mg_top }}px;{% endif %} 
      {% if mg_bottom != 0 %}margin-bottom:{{ mg_bottom }}px;{% endif %} 
      {% if pd_top != 0 %}padding-top:{{ pd_top }}px;{% endif %} 
      {% if pd_bottom != 0 %}padding-bottom:{{ pd_bottom }}px;{% endif %} 
      background-color:{{ cl_bg }};
	}
    @media (max-width: 767px) {
      .laber_{{ sid }}{
        {% if mobile_mg_top != 0 %}margin-top:{{ mobile_mg_top }}px;{% endif %} 
        {% if mobile_mg_bottom != 0 %}margin-bottom:{{mobile_mg_bottom }}px;{% endif %} 
        {% if mobile_pd_top != 0 %}padding-top:{{ mobile_pd_top }}px;{% endif %} 
        {% if mobile_pd_bottom != 0 %}padding-bottom:{{mobile_pd_bottom }}px;{% endif %} 
      }
    }
{% endstyle %} 

