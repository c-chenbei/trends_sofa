                    {%- render 'bammer-item', block: se_blocks[2], hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=450x185', ratio_demo: '41.111' , ccol: 'col-md-6 col-sm-12', for_i: 1 -%}
                  </div>
                </div>
      			<div class="col-md-4 col-sm-12">
                  <div class="row">
                    {%- render 'bammer-item', block: se_blocks[3], hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=450x185', ratio_demo: '41.111' , ccol: 'col-sm-12', for_i: 1 -%}
