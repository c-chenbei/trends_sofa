      			{%- render 'bammer-item', block: se_blocks[1], hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=1880x820', ratio_demo: '43.617' , ccol: 'col-md-4 col-sm-12', for_i: 1 -%}
     			{%- render 'bammer-item', block: se_blocks[2], hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=1880x820', ratio_demo: '43.617' , ccol: 'col-md-4 col-sm-12', for_i: 1 -%}
      			{%- render 'bammer-item', block: se_blocks[3], hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=1880x820', ratio_demo: '43.617' , ccol: 'col-md-4 col-sm-12', for_i: 1 -%}
     			{%- render 'bammer-item', block: se_blocks[4], hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=1880x820', ratio_demo: '43.617' , ccol: 'col-md-4 col-sm-12', for_i: 1 -%}
     			{%- render 'bammer-item', block: se_blocks[5], hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=1880x820', ratio_demo: '43.617' , ccol: 'col-md-4 col-sm-12', for_i: 1 -%}
     {%- endcase -%}
      
    </div>    
  </div>
</section>
