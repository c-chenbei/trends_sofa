{% liquid
  assign sid = section.id 
  assign layout = section.settings.layout
   assign hide_padd = section.settings.hide_padd
  assign se_blocks = section.blocks
  assign se_size = se_blocks.size
  
%}
   
{%- for i in (1..1) -%}
<section style="padding:{{ section.settings.mg_top }}px {{ section.settings.mg_right }}px {{ section.settings.mg_bottom }}px {{ section.settings.mg_left }}px; background-color:{{ section.settings.cl_bg }}">       
  <div class=" container {% if layout == 'full-width' %}{{ layout }}{% endif %} {% if hide_padd %}padding-0{% endif %}">
    {% if section.settings.title != blank or section.settings.sub_title != blank %}
    <div class="wrap_title col-lg-auto col-12">
      <div class="wrap_inner_title">
        {% if section.settings.title != blank %}
        <h3 class="section-title">{{ section.settings.title }}</h3>  
        {% endif %}
        {% if section.settings.sub_title != blank %}
        <span class="section-subtitle">{{ section.settings.sub_title }}</span>
        {% endif %}
      </div>
    </div> 
    {% endif %} 
    <div class="row {% if hide_padd %}row-0{% endif %}">
      {%- case se_size -%}
			{%- when 1 -%}
      			{%- render 'bammer-item', block: se_blocks[0], hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/1920x530.png?text=1920x530', ratio_demo: '27.604' , ccol: 'col-sm-12', for_i: 1 -%}
			{%- when 2 -%}
      			{%- render 'bammer-item', block: se_blocks[0], hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/692x400.png?text=692x400', ratio_demo: '57.803' , ccol: 'col-md-6 col-sm-12', for_i: 1 -%}
      			{%- render 'bammer-item', block: se_blocks[1, hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/692x400.png?text=692x400', ratio_demo: '57.803' , ccol: 'col-md-6 col-sm-12', for_i: 1 -%}	
      		{%- when 3 -%}
      			{%- render 'bammer-item', block: se_blocks[0], hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/450x185.png?text=450x185', ratio_demo: '41.111' , ccol: 'col-md-4 col-sm-12', for_i: 1 -%}
      			{%- render 'bammer-item', block: se_blocks[1], hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/450x185.png?text=450x185', ratio_demo: '41.111' , ccol: 'col-md-4 col-sm-12', for_i: 1 -%}
     			{%- render 'bammer-item', block: se_blocks[2], hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/450x185.png?text=450x185', ratio_demo: '41.111' , ccol: 'col-md-4 col-sm-12', for_i: 1 -%}
      		{%- when 4 -%}
      			{%- render 'bammer-item', block: se_blocks[0], hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/450x185.png?text=450x185', ratio_demo: '41.111' , ccol: 'col-md-6 col-sm-12', for_i: 1 -%}
      			{%- render 'bammer-item', block: se_blocks[1], hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/450x185.png?text=450x185', ratio_demo: '41.111' , ccol: 'col-md-6 col-sm-12', for_i: 1 -%}
     			{%- render 'bammer-item', block: se_blocks[2], hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/450x185.png?text=450x185', ratio_demo: '41.111' , ccol: 'col-md-6 col-sm-12', for_i: 1 -%}
      			{%- render 'bammer-item', block: se_blocks[3], hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/450x185.png?text=450x185', ratio_demo: '41.111' , ccol: 'col-md-6 col-sm-12', for_i: 1 -%}
      		{%- when 5 -%}
      			<div class="col-md-8 col-sm-12">
                  <div class="row">
                    {%- render 'bammer-item', block: se_blocks[0], hide_padd: hide_padd, cimg: 'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=930x500', ratio_demo: '53.763' , ccol: 'col-sm-12', for_i: 1 -%}
