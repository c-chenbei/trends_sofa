{% if section.settings.use_slideshow %}
{% assign id = section.id %}
{% assign style_dots = section.settings.style_dots %}
{% liquid 
		assign layout = section.settings.layout
        assign section_blocks = section.blocks  
    	assign no-img = "https://placehold.jp/100/f3f3f3/343e45/930x820.png?text=930x820"
    	assign index = 1 
        assign arr_blocks_img = section_blocks | where: "type", 'img' %}

<section class="laber_slidershow_{{ id }}">
<div data-wrapper-slidershow class="container {% if layout == 'full-width' %}full-width{% endif %}">
  <div class="row row-10">
   <div class="col-md-6 col-12 padding-0-10"> 
  <div data-js-slideshow class="js_carousel vertical-center slideshow-homepage6 {% if section.settings.fade_zoom %}fade_zoom{% endif %}" data-slick='{"fade":{{ section.settings.fade_zoom}}, "slidesToShow": 1, "slidesToScroll":1, "lazyLoad": "ondemand", "autoplay": {{ section.settings.use_slideshow_autoplay }}, "autoplaySpeed": "{{ section.settings.autoplay_slide_time | times: 1000 }}", "arrows": {{ section.settings.nav_enable }}, "dots":{{ section.settings.dot_enable }}, "pauseOnHover":{{ section.settings.pause_slide_hover }}, "infinite":{{ section.settings.loop }}, "appendDots": ".appendDots"}'>
    {% if arr_blocks_img.size > 0 %}  
    	{%- for block in arr_blocks_img -%}
    		{% if block.type == 'img' %} 
    			{% assign image = block.settings.image_sl %}
    			{% assign url = block.settings.link_img %}
    			{% assign open_link = block.settings.open_link %} 
                <div id="laber_bock_{{ block.id }}" class="wrap_slide js_image_slide">
                  <div  class="content-item" {{ block.shopify_attributes }}>                  
                    {% assign ratio = image.aspect_ratio | default: 1.0 %}
                    {% assign pd_top = 1 | divided_by: ratio | times: 100 %}
                    <div class="lazyload laber_bg_lz pr_lazy_img" data-bgset="{% if image != blank %}{{ image | img_url: '1x1' }}{% else %}{{ no-img }}{% endif %}" data-ratio="{{ ratio }}" data-sizes="auto" style="padding-top:{% if image != blank %} {{ pd_top }}%{% else %} 88.172%{% endif %};" ></div>     
                    <div class="wrap_text">
                      <div class="wrapper_caption flex h_{{ block.settings.h_position }} v_{{ block.settings.v_position }} text_{{ block.settings.txt_align }}">

                        <div class="caption" style=" color:{{ block.settings.cl_overlay }}; opacity:{{ block.settings.cl_opacity | times: 10 }}">
                          <div class="outner-caption">
                            <div class="inner-caption {{ block.settings.ani_txt }}">                            	
                              {% for block in section_blocks offset: index %}
                              {% assign index = index | plus: 1 %}                            		
                              {%- case block.type -%}                                     
                              {% when 'subhd' %}
                                <h4 id="b_{{ block.id }}"  class="slide_item_h4 {% if block.settings.hide %} d-none{% endif %}" {{ block.shopify_attributes }}>
                                  {% assign somearray = block.settings.title | split: ' ' %}                             
                                  {% assign pos = block.settings.custom_mark %}
                                  {% assign index_mark  = 0 %}
                                  {% for item in somearray %}
                                  {% assign index_mark  = index_mark | plus: 1 %} 
                                  <span  class="{% if block.settings.first_mark and forloop.first %}first {% endif %}{% if pos contains index_mark %}marked{% endif %}{% if block.settings.last_mark and forloop.last %}last {% endif %}" > {{ item }} </span>
                                  {% endfor %}   
                                </h4>
                              {% when 'hd' %}
                              <h3 id="b_{{ block.id }}"  class="slide_item_h3 {% if block.settings.hide %} d-none{% endif %}" {{ block.shopify_attributes }}>                             
                                {% assign somearray = block.settings.title | split: ' ' %} 
                                {% assign pos = block.settings.custom_mark %}
                                {% assign index_mark  = 0 %}
                                {% for item in somearray %}
                                {% assign index_mark  = index_mark | plus: 1 %} 
                                <span  class="{% if block.settings.first_mark and forloop.first %}first {% endif %}{% if pos contains index_mark %}marked{% endif %}{% if block.settings.last_mark and forloop.last %}last {% endif %}" > {{ item }} </span>
                                {% endfor %}                             
                              </h3>
                              {% when 'txt' %}
                              <p id="b_{{ block.id }}"  class="slide_item_p {% if block.settings.hide %} d-none{% endif %}" {{ block.shopify_attributes }}>{{ block.settings.title }}</p> 
                              {% when 'btn' %}
                              {%- if  block.settings.title != blank -%}
                              	<a id="b_{{ block.id }}" 
                                   class="buttons" href="{{ block.settings.btn_link }}" 
                                   target="{{ open_link }}" 
                                   {{ block.shopify_attributes }}>{{ block.settings.title }} {{ block.settings.icon_button }}</a>	
                              {%- endif -%}
                              {% when 'space' %}
                              <div id="b_{{ block.id }}" class="slide_item_space" {{ block.shopify_attributes }}></div>
                              {% when 'box' %}
                              <div id="b_{{ block.id }}"  class="slide_item_box" {{ block.shopify_attributes }}>    
                                <div class="inner-box">
                                  <div class="outside-box">
                                    <div class="inside-box">
                                      <h2>{{ block.settings.title }}</h2>
                                      <p>{{ block.settings.content }}</p>
                                      {%- if block.settings.btn_link != blank and block.settings.button_text != blank -%}
                                      	<a href="{{ block.settings.btn_link }}">{{ block.settings.button_text }}</a>
                                      {% endif %}
                                    </div>
                                  </div>
                                </div>
                              </div>
							  	
                              {% else %}                            				
                              {%- break -%}
                              {%- endcase -%}
                              {%- endfor -%}
                            </div> 
                          </div>
                        </div>   

                      </div>

                    </div>
                  </div> 
                </div>
    		{% endif %}
    	{% endfor %}
      {% endif %} 
    
  </div>
  {% if section.settings.dot_enable %}
    <div class="wrapper-dots container {{ style_dots }}">
      <div class="appendDots"></div>
    </div>
  {% endif %}  
  </div> 
    <div class="col-md-6 col-12 padding-0-10 type_collection_list zoom_img">
      	<div class="row">
          {% assign se_size = 0 %}
          {%- for block in section_blocks -%}
            {%- if block.type == 'collection' -%} 
              {% assign se_size = se_size | plus: 1 %} 
              {% assign c_size = se_size %} 
            {% endif %}
          {% endfor %}
          
          {%- for block in section_blocks -%}
              {%- if block.type == 'collection' -%} 
          			 {% assign se_size = se_size | plus: 1 %} 	
                      {%- case c_size -%}
                          {%- when 1 -%}
                            {% liquid
                            	assign ratio = 930 | divided_by: 820.0 
                                assign demo_ratio = 1 | divided_by: ratio | times: 100
                           %}
          					{%- render 'slideshow-col-item', block: block, se_size: se_size, cimg: 'https://placehold.jp/50/f3f3f3/343e45/930x820.png?text=930x820', demo_ratio: demo_ratio, for_i: 1 -%}
                          {%- when 2 -%}
            					{% liquid 
                                  assign ratio = 930 | divided_by: 400.0
                                  assign demo_ratio = 1 | divided_by: ratio | times: 100
                             %}
                              {%- render 'slideshow-col-item', block: block, se_size: se_size, cimg: 'https://placehold.jp/50/f3f3f3/343e45/930x400.png?text=930x400', demo_ratio: demo_ratio, for_i: 1 -%}
                          {%- when 3 -%}
          					  {% liquid 
                                    assign ratio = 455 | divided_by: 400.0
                                    assign demo_ratio = 1 | divided_by: ratio | times: 100
                               %}
                                {%- render 'slideshow-col-item', block: block, se_size: se_size, cimg: 'https://placehold.jp/50/f3f3f3/343e45/455x400.png?text=455x400', demo_ratio: demo_ratio, for_i: 1 -%}
          				{%- when 4 -%}
                              {% liquid 
                                    assign ratio = 455 | divided_by: 400.0
                                    assign demo_ratio = 1 | divided_by: ratio | times: 100
                               %}
                                {%- render 'slideshow-col-item', block: block, se_size: se_size, cimg: 'https://placehold.jp/50/f3f3f3/343e45/455x400.png?text=455x400', demo_ratio: demo_ratio, for_i: 1 -%}
                      {%- endcase -%}
              {%- endif -%}
          {% endfor %}
   		</div>
    </div>
  </div>
  
</div>
</section>


{% endif %}

{% style %}
	.laber_slidershow_{{ id }}{
			{% if section.settings.margin_top_slidershow != blank %}margin-top:{{ section.settings.margin_top_slidershow }}px; {% endif %} 
			{% if section.settings.margin_bottom_slidershow != blank %}margin-bottom:{{ section.settings.margin_bottom_slidershow }}px; {% endif %} 
			{% if section.settings.cl_bg %} background-color:{{ section.settings.cl_bg }} {% endif %}
	}
	{%- if section_blocks.size > 0 %}
        {%- for block in section_blocks -%}
        {%- assign id = block.id -%}
        {%- assign type = block.type -%}
            {%- case block.type -%} 
					{% when 'subhd' %}
                      .wrapper_caption #b_{{ id }}.slide_item_h4{
                        text-transform:{{ block.settings.text_transform }}; 
                        letter-spacing:{{ block.settings.ls_text }}px;
                        {% if block.settings.lh_text > 0 %}line-height:{{ block.settings.lh_text }}px; {% endif %} 
                        font-size:{{ block.settings.fs_text }}px; 
                        color:{{ block.settings.color }}; 
                        font-weight:{{ block.settings.fw_text }}; 
                      }
						@media (max-width: 767px) {
                          .wrapper_caption #b_{{ block.id }}.slide_item_h4{
							font-size:{{ block.settings.mobile_font_text }}px;
							font-weight:{{ block.settings.mobile_fw_text }}; 
                          }
                        }
					{% when 'hd' %}
						.wrapper_caption #b_{{ id }}.slide_item_h3 {
                          text-transform:{{ block.settings.text_transform }}; 
                          letter-spacing:{{ block.settings.ls_text }}; 
                          {% if block.settings.lh_text > 0 %}line-height:{{ block.settings.lh_text }}px; {% endif %} 
                          font-size:{{ block.settings.fs_text }}px; 
                          color:{{ block.settings.color }}; 
                          font-weight:{{ block.settings.fw_text }};
						}
						@media (max-width: 767px) {
                          .wrapper_caption #b_{{ block.id }}.slide_item_h3{
								font-weight:{{ block.settings.mobile_fw_text }};
								font-size:{{ block.settings.mobile_font_text }}px; 
                          }
                        }
				  {% when 'txt' %}
						.wrapper_caption #b_{{ id }}.slide_item_p{
							margin:0px; 
							letter-spacing:{{ block.settings.ls_text }}; 
							{% if block.settings.lh_text > 0 %}line-height:{{ block.settings.lh_text }}px; {% endif %} 
							font-size:{{ block.settings.fs_text }}px; 
							color:{{ block.settings.color }}; 
							font-weight:{{ block.settings.fw_text }};
						}
						@media (max-width: 767px) {
                          .wrapper_caption #b_{{ block.id }}.slide_item_p{
								font-size:{{ block.settings.mobile_font_text }}px;
								font-weight:{{ block.settings.mobile_fw_text }};
                          }
                        }
				  {% when 'btn' %}
                        .wrapper_caption #b_{{ id }}.buttons{
							margin:{{ block.settings.mg }}; 
                          padding:{{ block.settings.pd }}; 
                          background-color: {{ block.settings.cl_bg }}; 
                          color:{{ block.settings.cl_txt }}; 
                          font-size:{{ block.settings.fs_text }}px; 
                          font-weight:{{ block.settings.fw_text }};
                          border-radius:{{ block.settings.br_button }};
                          text-transform:{{ block.settings.button_transform }};
                          letter-spacing:{{ block.settings.ls_text }}px;
                        } 
                        .wrapper_caption #b_{{ block.id }}.buttons:hover{
                          background-color:{{ block.settings.cl_bg_hover }}; 
                          color:{{ block.settings.cl_txt_hover }} 
                        }
						@media (max-width: 767px) {
                          .wrapper_caption #b_{{ block.id }}.buttons{
                            margin:{{ block.settings.mobile_mg }}; 
                            padding:{{ block.settings.mobile_pd }};
                            font-size:{{ block.settings.mobile_font_text }}px;		
                            font-weight:{{ block.settings.mobile_fw_text }};
                          }	
                        }
				  {% when 'space' %}
					.wrapper_caption #b_{{ block.id }}.slide_item_space{
						height:{{ block.settings.sp }}px
					}
                    @media (max-width: 767px) {
						.wrapper_caption #b_{{ block.id }}.slide_item_space{
							height:{{ block.settings.mobile_sp }}px
                        }
                    }
				{% when 'box' %}
					.wrapper_caption #b_{{ block.id }}.slide_item_box .inside-box h2{
						text-transform:{{ block.settings.title_transform }}; 
                        letter-spacing:{{ block.settings.ls_title }}; 
                        {% if block.settings.lh_title > 0 %}line-height:{{ block.settings.lh_title }}px; {% endif %} 
                        font-size:{{ block.settings.fs_title }}px; 
                        color:{{ block.settings.color }}; 
                        font-weight:{{ block.settings.fw_title }};
                    }
					.wrapper_caption #b_{{ block.id }}.slide_item_box .inside-box  p{
                        text-transform:{{ block.settings.contennt_transform }}; 
                        letter-spacing:{{ block.settings.ls_text }}; 
                        {% if block.settings.lh_text > 0 %}line-height:{{ block.settings.lh_text }}px; {% endif %} 
                        font-size:{{ block.settings.fs_text }}px; 
                        color:{{ block.settings.color_content }}; 
                        font-weight:{{ block.settings.fw_text }};
                    }
					.wrapper_caption #b_{{ block.id }}.slide_item_box .inside-box  a{
                        text-transform:{{ block.settings.btn_transform }}; 
                        letter-spacing:{{ block.settings.ls_btn }}px;  
                        font-size:{{ block.settings.fs_text_btn }}px; 
                        background-color:{{ block.settings.cl_bg_btn }}; 
                        color:{{ block.settings.cl_btn }}; 
						font-weight:{{ block.settings.fw_text_btn }};
					}
            {% endcase %}
			
    	{% endfor %}
    {%- endif- %}
    @media (max-width: 767px) {

    }
{% endstyle %}
